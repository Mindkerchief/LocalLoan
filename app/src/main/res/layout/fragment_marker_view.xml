<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MarkerViewFragment">

    <RelativeLayout
        android:id="@+id/markerDetailsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/grey200"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/establishmentTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="Microfinance"
            android:textSize="12sp"
            tools:text="Microfinance" />

        <TextView
            android:id="@+id/establishmentNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/markerDeatilsCloseBtn"
            android:text="Establishment Name"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Establishment Name" />

        <TextView
            android:id="@+id/establishmentBusinessTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="65dp"
            android:text="Opens Mon-Fri 09:00 AM - 05:00 PM"
            android:textSize="12sp"
            tools:text="Opens Mon-Fri 09:00 AM - 05:00 PM" />

        <TextView
            android:id="@+id/savingDetailsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/establishmentBusinessTimeText"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="Minimum initial deposit of 30000"
            android:textSize="16sp"
            tools:text="Minimum initial deposit of 30000" />

        <Button
            android:id="@+id/savingsRedirectBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/savingDetailsText"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Save for 0.125%"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            tools:text="Save for 0.125%" />

        <TextView
            android:id="@+id/loanDetailsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/savingsRedirectBtn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="Minimum loan amount of 10000"
            android:textSize="16sp"
            tools:text="Minimum loan amount of 10000" />

        <Button
            android:id="@+id/loanRedirectBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loanDetailsText"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Loan for 1.25%"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            tools:text="Loan for 1.25%" />

        <ImageButton
            android:id="@+id/markerDeatilsCloseBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="close Marker View Deatils"
            android:src="@drawable/baseline_close_24" />

    </RelativeLayout>
</FrameLayout>